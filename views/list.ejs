<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Movie List</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css"
    />
  </head>
  <body>
    <div class="container">
      <div class="display-3">List of Movies</div>
      <ul>
        <% movieList.map(obj=>{%>
        <div class="card" style="width: 18rem">
          <img src="" class="card-img-top" alt="..." />
          <div class="card-body">
            <h5 class="card-title"><%= obj.title %></h5>
            <p class="card-text"><%= obj.overview %></p>
            <p class="card-text"><%= obj.release_date %></p>
          </div>
          <form action="/movie/movie/<%= obj._id %>/comment" method="post">
            <for label = "comment"></for>
            <textarea id="comment" name="comment" placeholder="comment"></textarea>
            <button type="submit" >Comment</button>
          </form>
          <% if(obj.comments.length != 0){ %>
          <div style="margin-top: 1em;">
            <% obj.comments.map((comment)=>{ %>
              <div class="card-body">
                <p class="movie-comment"><%= comment %></p>
              </div>
            <%}) %>
          </div>
          <% } %>
        </div>
        <% }) %>
      </ul>
    </div>
    <script src="	https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
